<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Kontak</h2>
      <a href="/contact/add" class="btn btn-info">
        Tambah data kontak
        </a>
        <% if (msg.length !== 0) { %>
            <div class="alert alert-success" role="alert">
            <%= msg %>
            </div>
        <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">NoHP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
            <% if (contact.length===0) { %>
                <tr>
                    <td colspan="4">
                        <div class="alert alert-danger fw-bold">Data Kontak tidak ada <br>
                    </td>
                </tr>
            <% } %>
            <% contact.forEach((contactt, i) => {i++ %>
            <tr>
                <th scope="row"><%= i++ %></th>
                <td><%= contactt.nama %></td>
                <td><%= contactt.nohp %></td>
                <td></i><a href="/contact/<%=contactt._id %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i>Detail</a></td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
